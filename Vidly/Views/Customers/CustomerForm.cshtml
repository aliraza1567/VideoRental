@model Vidly.ViewModels.NewCustomerViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@using (Html.BeginForm("Create", "Customers"))
{
    <div class="form-group">
        @Html.LabelFor(viewModel => viewModel.Customer.Name)
        @Html.TextBoxFor(viewModel => viewModel.Customer.Name, new { @class="form-control"})
    </div>
    <div class="form-group">
        @Html.LabelFor(viewModel => viewModel.Customer.DateOfBirth)
        @Html.TextBoxFor(viewModel => viewModel.Customer.DateOfBirth, new { @class="form-control"})
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(viewModel => viewModel.Customer.IsSubscribedToNewsLetter) Subscribed to News Letter?
        </label>
    </div>
    <div class="form-group">
        @Html.LabelFor(viewModel => viewModel.Customer.MembershipTypeId)
        @Html.DropDownListFor(viewModel => viewModel.Customer.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "Name"), "Select Membership Type", new { @class="form-control"})
    </div>

    <button type="submit" class="btn btn-primary">Save Customer</button>
}

