@model Vidly.ViewModels.CustomerFormViewModel
@{
    ViewBag.Title = "New Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>New Customer</h2>

@using (Html.BeginForm("Save", "Customers"))
{
    <div class="form-group">
        @Html.LabelFor(viewModel => viewModel.Customer.Name)
        @Html.TextBoxFor(viewModel => viewModel.Customer.Name, new { @class="form-control"})
        @Html.ValidationMessageFor(viewModel => viewModel.Customer.Name)
    </div>
    <div class="form-group">
        @Html.LabelFor(viewModel => viewModel.Customer.DateOfBirth)
        @Html.TextBoxFor(viewModel => viewModel.Customer.DateOfBirth, "{0:d MMM yyyy}" , new { @class="form-control"})
        @Html.ValidationMessageFor(viewModel => viewModel.Customer.DateOfBirth)
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(viewModel => viewModel.Customer.IsSubscribedToNewsLetter) Subscribed to News Letter?
        </label>
    </div>
    <div class="form-group">
        @Html.LabelFor(viewModel => viewModel.Customer.MembershipTypeId)
        @Html.DropDownListFor(viewModel => viewModel.Customer.MembershipTypeId, new SelectList(Model.MembershipTypes, "Id", "Name"), "Select Membership Type", new { @class="form-control"})
        @Html.ValidationMessageFor(viewModel => viewModel.Customer.MembershipTypeId)
    </div>
    @Html.HiddenFor(viewModel => viewModel.Customer.Id)
    <button type="submit" class="btn btn-primary">Save Customer</button>
}

