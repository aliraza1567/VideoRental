@model Vidly.Models.Customer
@{
    ViewBag.Title = "GetCustomerById";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li><b>Membership Type:</b> @Model.MembershipType.Name</li>
    @if (@Model.DateOfBirth.HasValue)
    {
        <li><b>Date of Birth:</b> @Model.DateOfBirth.Value.ToLongDateString()</li>
    }
</ul>

