@model Vidly.ViewModels.CustmersViewModel
@{
    ViewBag.Title = "GetAllCustomers";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <h2>Customers</h2>
    @Html.ActionLink("Add New Customer", "New", "Customers", null, new { @class = "btn btn-primary" })
</div>
<div>
    @if (Model.Customers.Count == 0)
    {
        <text>No Customer Exist</text>
    }
    else
    {
        <table class="table table-striped table-hover" id="customers">
            <tr>
                <th>Customers</th>
                <th>Discount Rate</th>
                <th>Membership Type</th>
            </tr>
            @foreach (var customer in Model.Customers)
            {
                <tr>
                    <td>@Html.ActionLink(customer.Name, "Edit", "Customers", new { id = customer.Id }, null)</td>
                    <td>@customer.MembershipType.DiscountRate%</td>
                    <td>@customer.MembershipType.Name</td>
                    <td>
                        <button data-customer-id="@customer.Id" class="btn-link js-customer-delete">Delete</button>
                    </td>
                </tr>
            }
        </table>
    }
</div>

@section scripts
{
    <script>
        $(document).ready(function() {
            $("#customers").on("click", ".js-customer-delete", function() {
                    var button = $(this);
                    bootbox.confirm("Are you sure you want to delete the customer?",
                        function(result) {
                            if (result) {
                                $.ajax({
                                    url: "api/customer/" + button.attr("data-customer-id"),
                                    method: "DELETE",
                                    success: function() {
                                        button.parents("tr").remove();
                                    }
                                });
                            }
                        });


                });
        });
    </script>
}
