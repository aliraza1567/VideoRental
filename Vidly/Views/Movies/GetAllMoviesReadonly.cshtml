@using Vidly.Models
@model Vidly.ViewModels.MovieViewModel
@{
    ViewBag.Title = "GetAllMovies";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <h2>Movies</h2>
</div>
<div>
    @if (Model.Movies.Count == 0)
    {
        <text>No Movie Exist</text>
    }
    else
    {
        <table class="table table-striped table-hover" id="movies">
            <thead>
            <tr>
                <th>Movies</th>
                <th>In Stock</th>
                <th>Genre</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    }
</div>

@section scripts
{
    <script>
        $(document).ready(function() {

            var table = $("#movies").DataTable({
                ajax: {
                    url: "api/movie",
                    dataSrc: ""
                },
                columns: [
                    {
                        data: "name"
                    },
                    {
                        data: "numberInStock"
                    },
                    {
                        data: "genre"
                    }
                    ,
                    {
                        data: "id"
                    }
                ]
            });
        });
    </script>
}

