@model Vidly.ViewModels.MovieFormViewModel
@{
    ViewBag.Title = "New Movie";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    var labeltext = Model.Movie == null ? "New Movie" : "Edit Movie";
}
<h2>@labeltext</h2>

@using (Html.BeginForm("Save", "Movies"))
{
    @Html.ValidationSummary(true, "Please correct following errors!")
    <div class="form-group">
        @Html.LabelFor(viewModel => viewModel.Movie.Name)
        @Html.TextBoxFor(viewModel => viewModel.Movie.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(viewModel => viewModel.Movie.Name)

    </div>
    <div class="form-group">
        @Html.LabelFor(viewModel => viewModel.Movie.ReleaseDate)
        @Html.TextBoxFor(viewModel => viewModel.Movie.ReleaseDate, "{0:d MMM yyyy}", new { @class = "form-control" })
        @Html.ValidationMessageFor(viewModel => viewModel.Movie.ReleaseDate)
    </div>
    <div class="form-group">
        @Html.LabelFor(viewModel => viewModel.Movie.NumberInStock)
        @Html.TextBoxFor(viewModel => viewModel.Movie.NumberInStock, new { @class = "form-control" })
        @Html.ValidationMessageFor(viewModel => viewModel.Movie.NumberInStock)
    </div>
    <div class="form-group">
        @Html.LabelFor(viewModel => viewModel.Movie.Genre)
        @Html.DropDownListFor(viewModel => viewModel.Movie.Genre, new SelectList(Model.Genres, "Name", "Name"), "Select Genre Type", new { @class = "form-control" })
        @Html.ValidationMessageFor(viewModel => viewModel.Movie.Genre)
    </div>
    @Html.HiddenFor(viewModel => viewModel.Movie.Id)
    @Html.AntiForgeryToken()
    <button type="submit" , class="btn btn-primary">Save Movie</button>
}

@section scripts
{
    @Scripts.Render("~/bundles/jqueryval")
}
