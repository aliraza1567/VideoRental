@model Vidly.Models.Movie
@{
    ViewBag.Title = "GetMovieById";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>@Model.Name</h2>
<ul>
    <li><b>Genre:</b> @Model.Genre</li>
    <li><b>Release Date:</b> @Model.ReleaseDate.ToLongDateString()</li>
    <li><b>Date Added:</b> @Model.DateAdded.ToLongDateString()</li>
    <li><b>Number In Stock:</b> @Model.NumberInStock</li>
</ul>


